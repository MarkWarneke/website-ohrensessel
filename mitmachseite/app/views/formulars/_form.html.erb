<%= form_for(@formular,url: formulars_path, html: { multipart: true }) do |f| %>
  <% if @formular.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@formular.errors.count, "error") %> prohibited this formular from being saved:</h2>

      <ul>
      <% @formular.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div id="preview">
    <!-- Hier erscheinen die Vorschaubilder -->
  </div>

  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image, :multiple => true, id:"file-upload" %>
  </div>
  <div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :street %><br>
    <%= f.text_field :street %>
  </div>
  <div class="field">
    <%= f.label :zip %><br>
    <%= f.number_field :zip %>
  </div>
  <div class="field">
    <%= f.label :site %><br>
    <%= f.text_field :site %>
  </div>
  <div class="field">
    <%= f.label :information %><br>
    <%= f.text_area :information %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<div>
  <div class="owl-carousel">
    <% @wingbacks.each do |wc| %>
      <div><%= image_tag(wc.image.url(:medium)) %></div>
    <% end %>
  </div>
</div>
